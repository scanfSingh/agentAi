{
  "version": 2,
  "name": "spring-vercel-app",
  "builds": [
    {
      "src": "pom.xml",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "target"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "SPRING_PROFILES_ACTIVE": "prod"
  }
}

